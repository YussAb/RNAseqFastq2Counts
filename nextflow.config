/*
* -------------------------------------------------
*  Nextflow config file
* -------------------------------------------------
* Default config options for all environments.
*/


// Global default params, used in configs
params {
    // Mandatory arguments
        input = null // No default input
             
    //Main options
        outdir = '/data/yabili/RNAseqFastq2Counts/NEW'
        publish_dir_mode = 'copy'
        //email = 'youssef.abili@ircc.it'
        //email_on_fail = 'youssef.abili@ircc.it'
    
    //fixed data
        params.genome="/data/yabili/ref/rnaseq/GRCh38.primary_assembly.genome.fa"
        params.annotation="/data/yabili/ref/rnaseq/gencode.v39.primary_assembly.annotation.gtf"
    
    //parameters
        params.fastq="" 
}


// Profiles

profiles {
    standard {
        process.executor = 'local'
        singularity.enabled = true
        singularity.autoMounts = true
   }
     conda  {
        process.conda = '/home/yabili/miniconda3/envs/rnaseq_pipe_acc'
	    process.executor= 'local'
    }   
     ircc {
        //process.executor = 
        //process.queue = 
        //process.cpus = 
        //process.memory  = 
    }
     singularity {
        docker.enabled = false
        singularity.autoMounts = true
        singularity.enabled = true
    }
     docker  {
        docker.enabled = true
        singularity.autoMounts = true
        singularity.enabled = false
    }
}

// Executor

executor {
    name = 'local'
    cpus = 32
    memory = 64.GB
}

// Resources

process {
    withName: fastqc {
        cpus = 1
        memory = 4.GB
}
    withName: runMultiQC {
        cpus = 32
        memory = 64.GB
}
    withName: STAR_aligment  {
        cpus = 4
        memory = 12.GB
}
    withName: STAR_genome_index {
        cpus = 16
        memory = 24.GB
}
    withName: Qualimap {
        cpus = 1
        memory = 4.GB
}
    withName: FeautureCounts {
        cpus = 4
        memory = 4.GB
}
}
